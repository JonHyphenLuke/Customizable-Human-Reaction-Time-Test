<body>
<div class="container">
  <div class="box">
    <h1>Reaction Time Test</h1>
    <p>Click <b>Start</b>, wait for <b>GO!</b>, then click in the box as soon as you see <strong>GO!</strong>.</p>

    <div id="prompt">Press Start</div>
    <div id="result"></div>

    <button id="startBtn">Start</button>

    <div id="settings">
      <label>
        Delay before "GO!": <input id="delay" type="number" min="1" step="1" value="5"> seconds
      </label>
      <div>
        <button id="toggleBtn">Hide Settings</button>
      </div>
    </div>

    <div id="footer">Created by Jon-luke Sadowsky</div>
  </div>
</div>

<script>
const startBtn = document.getElementById("startBtn");
const promptEl = document.getElementById("prompt");
const resultEl = document.getElementById("result");
const delayInput = document.getElementById("delay");
const settings = document.getElementById("settings");
const toggleBtn = document.getElementById("toggleBtn");

let goTime = 0;
let waiting = false;

startBtn.addEventListener("click", () => {
  const delaySec = Number(delayInput.value);
  if (isNaN(delaySec) || delaySec <= 0) { alert("Enter a positive number of seconds."); return; }

  if (!settings.classList.contains("hidden")) {
    settings.classList.add("hidden");
    toggleBtn.textContent = "Show Settings";
  }

  promptEl.textContent = "Wait for it...";
  resultEl.textContent = "";
  startBtn.disabled = true;
  waiting = true;

  setTimeout(() => {
    promptEl.textContent = "GO!";
    goTime = performance.now();
  }, delaySec * 1000);
});

function handleResponse(e) {
  if (e && e.target === toggleBtn) return;
  if (!waiting || !goTime) return;

  const rt = performance.now() - goTime;
  promptEl.textContent = `Your reaction time: ${Math.round(rt)} ms`;
  resultEl.textContent = "";
  startBtn.disabled = false;
  waiting = false;
  goTime = 0;
}

document.addEventListener("keydown", (e) => {
  if (e.key === " " || e.key === "Enter") {
    e.preventDefault();
    handleResponse(e);
  }
});
document.addEventListener("click", handleResponse);

toggleBtn.addEventListener("click", (e) => {
  e.stopPropagation();
  if (settings.classList.contains("hidden")) {
    settings.classList.remove("hidden");
    toggleBtn.textContent = "Hide Settings";
  } else {
    settings.classList.add("hidden");
    toggleBtn.textContent = "Show Settings";
  }
});
</script>
</body>
</html>
