<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Reaction Time Test</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      background-color: white;
    }
    #settings {
      margin: 20px;
    }
    #startBtn {
      font-size: 2rem;
      padding: 15px 30px;
      margin-top: 20px;
      border-radius: 12px;
      cursor: pointer;
    }
    #blindBtn {
      position: absolute;
      top: 10px;
      right: 10px;
      padding: 8px 14px;
      border-radius: 8px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>Reaction Time Test</h1>

  <div id="settings">
    <button id="showHideBtn">Show/Hide Settings</button>
    <!-- First time checkbox will be injected here -->
  </div>

  <button id="startBtn">Start</button>
  <button id="blindBtn" onclick="startBlindMode()">Blind Mode</button>

  <p id="result"></p>

  <script>
    // --- Normal Mode ---
    const startBtn = document.getElementById("startBtn");
    const result = document.getElementById("result");
    let startTime, timer;

    startBtn.addEventListener("click", () => {
      startBtn.disabled = true;
      result.textContent = "Wait for green...";
      document.body.style.backgroundColor = "red";

      const randomDelay = Math.floor(Math.random() * 2000) + 1000;
      timer = setTimeout(() => {
        document.body.style.backgroundColor = "green";
        result.textContent = "Click!";
        startTime = Date.now();
      }, randomDelay);
    });

    document.body.addEventListener("click", () => {
      if (document.body.style.backgroundColor === "green" && startTime) {
        const reactionTime = Date.now() - startTime;
        result.textContent = `Your reaction time: ${reactionTime} ms`;
        document.body.style.backgroundColor = "white";
        startTime = null;
        startBtn.disabled = false;
        clearTimeout(timer);
      }
    });

    // --- Blind Mode ---
    let blindMode = false;
    let trialCount = 0;
    let trialTimes = [];
    let firstTimeClicked = false;

    function createFirstTimeCheckbox() {
      const container = document.getElementById("settings");
      if (!document.getElementById("firstTimeCheckbox")) {
        const label = document.createElement("label");
        label.innerHTML = `
          <input type="checkbox" id="firstTimeCheckbox"> First time using Blind Mode
        `;
        container.appendChild(label);
        document.getElementById("firstTimeCheckbox").addEventListener("change", (e) => {
          firstTimeClicked = e.target.checked;
        });
      }
    }

    function startBlindMode() {
      blindMode = true;
      trialCount = 0;
      trialTimes = [];
      firstTimeClicked = document.getElementById("firstTimeCheckbox")?.checked || false;
      nextBlindTrial();
    }

    function nextBlindTrial() {
      if (trialCount >= 3) {
        endBlindMode();
        return;
      }

      alert("Press OK when ready for Trial " + (trialCount + 1));

      let waitTimes = [10000, 20000, 30000];
      let waitTime = waitTimes[trialCount];

      document.body.style.backgroundColor = "red";

      setTimeout(() => {
        document.body.style.backgroundColor = "green";
        let start = performance.now();

        function handleClick() {
          let reaction = performance.now() - start;
          trialTimes.push(reaction.toFixed(2));
          document.body.removeEventListener("click", handleClick);
          trialCount++;
          nextBlindTrial();
        }

        document.body.addEventListener("click", handleClick);
      }, waitTime);
    }

    function endBlindMode() {
      document.body.style.backgroundColor = "white";

      let resultsText = `Trial 1: ${trialTimes[0]} ms\nTrial 2: ${trialTimes[1]} ms\nTrial 3: ${trialTimes[2]} ms`;
      alert("All Trials Complete!\n\n" + resultsText);

      sendResults(trialTimes[0], trialTimes[1], trialTimes[2], firstTimeClicked);
    }

    function sendResults(trial1, trial2, trial3, firstTimeClicked) {
      const url = "https://script.google.com/macros/s/AKfycbz2gdd1WZG8RxwZes7ZfSgAmttLaYwo4unNqFlgaeEyfrvKzb9SY_Nb9OJJelGzOpyW-Q/exec";

      fetch(url, {
        method: "POST",
        body: JSON.stringify({
          trial1: trial1,
          trial2: trial2,
          trial3: trial3,
          firstTime: firstTimeClicked
        }),
        headers: {
          "Content-Type": "application/json"
        }
      })
      .then(res => res.json())
      .then(res => console.log("Data sent:", res))
      .catch(err => console.error("Error:", err));
    }

    // Initialize
    createFirstTimeCheckbox();
  </script>
</body>
</html>
